{
  "emulators": {
    "firestore": {
      "port": 8089
    },
    "database": {
      "port": 9088
    },
    "pubsub": {
      "port": 8087
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "functions": {
      "port": 8095
    },
    "extensions": {
      "port": 9009
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}