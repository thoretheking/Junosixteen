{
  "name": "junosixteen-backend",
  "version": "1.0.0",
  "description": "Backend API for JunoSixteen - Gamified Learning Platform with Adaptive Content",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed": "node scripts/seed-data.js",
    "build-mobile": "cd mobile && npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "build-android": "cd mobile && npx react-native build-android",
    "build-ios": "cd mobile && npx react-native build-ios",
    "build-windows": "electron-builder --windows",
    "build-all": "npm run build-android && npm run build-ios && npm run build-windows",
    "postinstall": "npm run setup-mobile",
    "setup-mobile": "cd mobile && npm install",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "main-electron": "electron-main.js",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@google-ai/generativelanguage": "^3.1.0",
    "@google/generative-ai": "^0.24.0",
    "@mui/material": "^7.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "firebase-admin": "^12.7.0",
    "google-auth-library": "^9.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "rate-limiter-flexible": "^5.0.3",
    "tailwindcss": "^4.1.4",
    "uuid": "^9.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "build": {
    "appId": "com.junosixteen.app",
    "productName": "JunoSixteen",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron-main.js",
      "src/**/*",
      "assets/**/*",
      "!node_modules"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "learning",
    "gamification",
    "training",
    "education",
    "ai",
    "adaptive",
    "firebase",
    "nodejs",
    "electron",
    "react-native",
    "cross-platform"
  ],
  "author": "JunoSixteen Team",
  "license": "MIT"
}
