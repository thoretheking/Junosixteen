{
  "name": "juno-backend",
  "private": true,
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "prisma:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:golden": "node scripts/verify-golden.mjs",
    "test:mangle": "node test-mangle.js",
    "dev:mangle": "cd ../services/mangle && MANGLE_FAKE=1 go run .",
    "dev:backend": "tsx src/server.ts",
    "dev:front": "echo 'Start your frontend (expo start / react-native start)'",
    "openapi:validate": "npx @redocly/cli lint ../openapi.yaml",
    "openapi:generate-client": "npx openapi-typescript ../openapi.yaml -o src/types/api-client.ts",
    "openapi:docs": "npx @redocly/cli preview-docs ../openapi.yaml",
    "mock:api": "npx @stoplight/prism-cli mock ../openapi.yaml -p 5001",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.3",
    "pg": "^8.11.3",
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "dayjs": "^1.11.10",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8",
    "@prisma/client": "^5.16.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "nodemon": "^3.1.0",
    "typescript": "^5.5.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.12",
    "tsx": "^4.7.0",
    "prisma": "^5.16.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": ["junosixteen", "mangle", "policy", "backend"],
  "author": "JunoSixteen Team",
  "license": "MIT"
} 